{{#if this.isShowAddInput}}
  <form>
    <div class='new-task-input'>
      <input
        type='description'
        class='form-control'
        id='description'
        aria-describedby='description'
        value={{this.newTaskDescription}}
        {{on 'input' this.onDescriptionChange}}
        data-test-description-input
      />
    </div>
    <div class='add-task-validation-buttons'>
      <Shared::Button
        type='submit'
        class='btn btn-secondary'
        @label='✔'
        {{on 'click' this.addNewTask}}
        data-test-confirmation-button
      />
      <Shared::Button
        type='submit'
        class='btn btn-secondary'
        @label='✖'
        {{on 'click' this.onCancel}}
        data-test-cancel-button
      />
    </div>
  </form>
{{/if}}